[Unit]
Description=Minter Node
After=network.target
After=auditd.service

[Service]
Type=simple
KillMode=process
Restart=always
RestartSec=5
TimeoutSec=300
#
User=minter
#RemainAfterExit=yes
LimitNOFILE=20000
LimitNPROC=1000
#
WorkingDirectory=/home/minter
#
ExecStart=-/bin/bash -c 'test -f  ./bin/minter && ./bin/minter node --testnet'
#
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=minterd
#
OOMScoreAdjust=-900

[Install]
WantedBy=multi-user.target
Alias=minter.service
